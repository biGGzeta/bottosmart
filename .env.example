# BottoSmart Configuration
# Copy this file to .env and configure your settings

# Exchange Settings
EXCHANGE=binance
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
SANDBOX=true

# Trading Configuration
# Opportunistic settings - more aggressive than conservative approaches
MAX_POSITION_SIZE=0.15
MIN_POSITION_SIZE=0.02
STOP_LOSS=0.025
TAKE_PROFIT=0.06

# Risk Management
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.15

# Machine Learning
PREDICTION_CONFIDENCE_THRESHOLD=0.65

# Logging
LOG_LEVEL=INFO